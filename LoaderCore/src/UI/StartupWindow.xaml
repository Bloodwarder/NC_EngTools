<Window x:Class="LoaderCore.UI.StartUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoaderCore.UI"
        mc:Ignorable="d"
        Title="Автозапуск NC EngTools" Height="600" MinHeight="550" Width="700" MaxWidth="700" Closing="StartUpWindowClosing" KeyDown="Window_KeyDown" Loaded="Window_Loaded">
    <Window.Resources>
        <XmlDataProvider x:Key="configurationProvider" Source="..\Configuration.xml" XPath="/configuration"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource configurationProvider}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="294"/>
            <RowDefinition Height="*" MinHeight="294"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*" MaxWidth="200"/>
                <ColumnDefinition Width="*" MaxWidth="500"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="20,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="24" FontWeight="Bold" FontStyle="Italic">
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0,0.5" StartPoint="1, 0.5">
                        <GradientStop Color="#FF7878FF"/>
                        <GradientStop Color="Blue" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>NC EngTools</TextBlock>
            <DockPanel Grid.Row="0" Grid.Column="3">
                <CheckBox DockPanel.Dock="Right" Margin="10" VerticalAlignment="Top" Name="chbShowOnStartUp" 
                          IsChecked="{Binding XPath=ShowStartup}"/>
                <TextBlock DockPanel.Dock="Right" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10" Text="Показывать при старте"/>
            </DockPanel>
            <DockPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Width="Auto" LastChildFill="True" Margin="5" Visibility="Hidden">
                <TextBlock DockPanel.Dock="Left" Text="Путь к файлам обновлений:" VerticalAlignment="Center"/>
                <Button Name="bSetUpdatePath" DockPanel.Dock="Right" Height="30" Width="30" Click="SetUpdatePathButtonClick"/>
                <TextBox Name="tbSourcePath" Height="30" Width="Auto" VerticalAlignment="Center" Margin="5" IsEnabled="False"/>
            </DockPanel>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Включить" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="10"/>
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Автообновление" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="9"/>
            <CheckBox Grid.Row="3" Grid.Column="0" Name="chbIncludeLayerWorks" VerticalAlignment="Center" HorizontalAlignment="Center" 
                      IsChecked="{Binding XPath=/LayerWorksConfiguration/Enabled}" Tag="{Binding XPath=/LayerWorksConfiguration/@Module}"
                      Checked="IncludeCheckChanged"/>
            <CheckBox Grid.Row="3" Grid.Column="1" Name="chbAutoUpdateLayerWorks" VerticalAlignment="Center" HorizontalAlignment="Center" 
                      IsChecked="{Binding XPath=/LayerWorksConfiguration/UpdateEnabled}" Tag="{Binding XPath=/LayerWorksConfiguration/@Module}"
                      Checked="AutoUpdateCheckChanged"/>
            <Button Grid.Row ="3" Grid.Column="2" Name="bUpdateLayerWorks" Margin="20 5 20 5" Content="Обновить" FontSize="14" Tag="LayerWorks" Click="UpdateButtonClick" IsEnabled="False"/>
            <DockPanel Grid.Row="3" Grid.Column="3">
                <TextBlock DockPanel.Dock="Left" Text="LayerWorks" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                <Button x:Name="bCommandHelp" DockPanel.Dock="Right" Width="130" Margin="20 5 20 5" HorizontalAlignment="Right" Content="Список команд" Click="CommandHelpClick"/>
            </DockPanel>
            <CheckBox Grid.Row="4" Grid.Column="0" Name="chbIncludeUtilities" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True" Tag="Utilities"
                      Checked="IncludeCheckChanged"/>
            <CheckBox Grid.Row="4" Grid.Column="1" Name="chbAutoUpdateUtilities" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True" Tag="Utilities"
                      Checked="AutoUpdateCheckChanged"/>
            <Button Grid.Row ="4" Grid.Column="2" 
                    Name="bUpdateUtilities" 
                    Margin="20 5 20 5" 
                    Content="Обновить" 
                    FontSize="14" 
                    Tag="Utilities" 
                    Click="UpdateButtonClick" IsEnabled="False"/>
            <DockPanel Grid.Row="4" Grid.Column="3">
                <TextBlock Text="Utilities" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                <Button x:Name="bLaunchEditor" DockPanel.Dock="Right" Width="130" Margin="20 5 20 5" HorizontalAlignment="Right" Content="Редактор слоёв" Click="LaunchEditorClick"/>
            </DockPanel>


            <CheckBox Grid.Row="5" Grid.Column="0" Name="chbIncludeGeoMod" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True" Tag="GeoMod"
                      Checked="IncludeCheckChanged"/>
            <CheckBox Grid.Row="5" Grid.Column="1" Name="chbAutoUpdateGeoMod" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="True" Tag="GeoMod"
                      Checked="AutoUpdateCheckChanged"/>
            <Button Grid.Row ="5" Grid.Column="2" 
                    Name="bUpdateGeoMod" 
                    Margin="20 5 20 5" 
                    Content="Обновить" 
                    FontSize="14" 
                    Tag="GeoMod" 
                    Click="UpdateButtonClick" IsEnabled="False"/>
            <DockPanel Grid.Row="5" Grid.Column="3">
                <TextBlock Text="GeoMod" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="20,0,0,0"/>
                <Button x:Name="bKnownIssues" DockPanel.Dock="Right" Width="130" Margin="20 5 20 5" HorizontalAlignment="Right" Content="Известные проблемы" Click="KnownIssuesClick"/>
            </DockPanel>
        </Grid>
        <!--<FlowDocumentScrollViewer Grid.Row="1" Margin="3,5,3,3" BorderBrush="#FF4A4A4A" Foreground="Black">
            <FlowDocument x:Name="fdLog" FontSize="14" Foreground="Navy" Background="WhiteSmoke" TextAlignment="Left" FontFamily="Corbel" ColumnWidth="650" LineHeight="5">
            </FlowDocument>
            --><!--<TextBlock x:Name="tbLog" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Foreground="Blue" TextWrapping="Wrap"/>--><!--
        </FlowDocumentScrollViewer>-->
        <WebBrowser x:Name="wbUpdates" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
