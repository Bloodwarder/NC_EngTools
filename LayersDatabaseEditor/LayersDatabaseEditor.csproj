<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<PlatformTarget>x64</PlatformTarget>
		<ProduceReferenceAssembly>False</ProduceReferenceAssembly>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<Target Name="BeforeResolveReferences">
		<Message Text="$(AssemblySearchPaths)"/>
		<CreateProperty
			Value="..\NC_EngTools\bin\$(Configuration)\ExtensionLibraries;$(AssemblySearchPaths)">
			<Output TaskParameter="Value"
				PropertyName="AssemblySearchPaths" />
		</CreateProperty>
	</Target>
	
	<PropertyGroup>
		<Deterministic>True</Deterministic>
		<OutputPath>..\NC_EngTools\bin\$(Configuration)\Editor</OutputPath>
		<SignAssembly>False</SignAssembly>
	</PropertyGroup>

	
	<ItemGroup>
		<PackageReference Include="NPOI" Version="2.6.2" />
		<PackageReference Include="Npoi.Mapper" Version="6.2.1" />
	</ItemGroup>

	<ItemGroup>
		<Page Include="App.xaml" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LayersDatabase\LayersDatabase.csproj">
			<Private>False</Private>
			<CopyLocalSatelliteAssemblies>False</CopyLocalSatelliteAssemblies>
			<ReferenceOutputAssembly>True</ReferenceOutputAssembly>
			<HintPath>..\Database\LayersDatabase.dll</HintPath>
		</ProjectReference>
		<ProjectReference Include="..\LayerWorks23\LayerWorks23.csproj">
			<Private>False</Private>
			<CopyLocalSatelliteAssemblies>False</CopyLocalSatelliteAssemblies>
			<ReferenceOutputAssembly>True</ReferenceOutputAssembly>
			<HintPath>..\ExtensionLibraries\LayerWorks23.dll</HintPath>
		</ProjectReference>
		<ProjectReference Include="..\LoaderCore\LoaderCore.csproj">
		  <Private>False</Private>
		</ProjectReference>
	</ItemGroup>

	<Target Name="AfterBuild">
		<Message Text="LDBE Build Completed" Importance="high"></Message>
	</Target>
	
</Project>
