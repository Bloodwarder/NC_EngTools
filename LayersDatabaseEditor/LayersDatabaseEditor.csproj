<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<PlatformTarget>x64</PlatformTarget>
		<ProduceReferenceAssembly>False</ProduceReferenceAssembly>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>

	<PropertyGroup>
		<Deterministic>True</Deterministic>
		<RootOutputPath>..\NC_EngTools\bin\$(Configuration)</RootOutputPath>
		<OutputPath>$(RootOutputPath)\Editor</OutputPath>
		<SignAssembly>False</SignAssembly>
	</PropertyGroup>


	<ItemGroup>
		<PackageReference Include="NPOI" Version="2.6.2" />
		<PackageReference Include="Npoi.Mapper" Version="6.2.1" />
	</ItemGroup>

	<ItemGroup>
		<Page Include="App.xaml" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LayersDatabase\LayersDatabase.csproj">
			<Private>False</Private>
			<CopyLocalSatelliteAssemblies>False</CopyLocalSatelliteAssemblies>
			<ReferenceOutputAssembly>True</ReferenceOutputAssembly>
			<HintPath>$(RootOutputPath)\Database\LayersDatabase.dll</HintPath>
		</ProjectReference>
		<ProjectReference Include="..\LayerWorks23\LayerWorks23.csproj">
			<Private>False</Private>
			<CopyLocalSatelliteAssemblies>False</CopyLocalSatelliteAssemblies>
			<ReferenceOutputAssembly>True</ReferenceOutputAssembly>
			<HintPath>$(RootOutputPath)\ExtensionLibraries\LayerWorks23.dll</HintPath>
		</ProjectReference>
		<ProjectReference Include="..\LoaderCore\LoaderCore.csproj">
			<Private>False</Private>
			<HintPath>$(RootOutputPath)\ExtensionLibraries\LoaderCore.dll</HintPath>
		</ProjectReference>
	</ItemGroup>

</Project>
