<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0-windows</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<PlatformTarget>x64</PlatformTarget>
		<GenerateAssemblyInfo>true</GenerateAssemblyInfo>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DebugType>none</DebugType>
	</PropertyGroup>

	<PropertyGroup>
		<OutputPath>..\NC_EngTools\bin\$(Configuration)\ExtensionLibraries</OutputPath>
	</PropertyGroup>

	<ItemGroup>
		<Compile Remove="Unused\NameParserFactory.cs" />
		<Compile Remove="Unused\NameParserOld.cs" />
	</ItemGroup>

	<ItemGroup>
		<None Include="Unused\NameParserFactory.cs" />
		<None Include="Unused\NameParserOld.cs" />
	</ItemGroup>

	<ItemGroup>
		<None Update="Data\LayerParser_ИС.xml">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<!--Переместить базовый парсер-->
	<Target Name="CopyUserData" AfterTargets="Build">
		<ItemGroup>
			<UserData Include="..\NC_EngTools\bin\$(Configuration)\ExtensionLibraries\Data\LayerParser_ИС.xml"/>
		</ItemGroup>
		<Move SourceFiles="@(UserData)" DestinationFolder="..\NC_EngTools\bin\$(Configuration)\UserData"/>
		<RemoveDir Directories="..\NC_EngTools\bin\$(Configuration)\ExtensionLibraries\Data"/>
	</Target>

</Project>
